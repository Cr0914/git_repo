/* pages/libaray/Search_datail/Search_detail.wxss */

page{
  height:100%;
  }
.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
  }
  
.div1
{
  display: flex;
  flex-direction: column;
  border-bottom:solid rgb(247, 245, 245);
}

.div2
{
  display: flex;
  min-width: 0;
  flex-direction: column;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.title{
  font-weight: 600;
  padding-left: 20rpx;
}
.content {
   padding-left: 30rpx;
   padding-right: 10rpx;
   font-size: small;
   overflow: hidden;
   display: inline-block;
   white-space: nowrap; 
   text-overflow: ellipsis;
   /*flex布局，，white-space:nowrap会影响flex布局下未设定宽度的元素，所以给设置了display:flex的父元素设置一下min-width: 0;即可解决问题。 */
}
.err
{
  display: flex;
  justify-content: center;
  align-items: center;
}
