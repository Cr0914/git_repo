/* pages/list2/list2.wxss */
page{
  height:100%;
}
.background{
  width: 100%;
  height: 100%;
  position: fixed;
  background-size:100% 100%;
  z-index: -999;
  opacity: 0.7; /*透明度*/
}
.demo-box{
  width:100%;
  height:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title{
  padding-top: 125rpx;
  text-align:center;
  font-size: 50rpx;
}

.author{
  font-size:35rpx;
  padding-top:10rpx;
  height: 20rpx;
  text-align:center;
}
.poem-box{
  width:90%;
  height: 65%;
  padding-top:5%;
  text-align:center;
  white-space: pre-line;
  font-size: 40rpx;
}

.modal-content{
    height:85%;
    margin:5rpx;
}

.Menu>radio-group{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  letter-spacing: 5rpx;
  line-height: 28rpx;
}

.SongChoose{
  width: 100%;
  height: 60rpx;
  padding-left:2%;
}


.tips{
  display: flex;
  justify-content: center;
  padding-top:10%;
  padding-bottom:10%;
}


.footer{
  font-size: 50rpx;  /*设置字体大小*/
  width: 100%;
  position:fixed;  /*固定位置*/
  bottom:0;
  height:7%;
  padding-top:3%;
  padding-bottom:4%;
  background-color: #e9e9e9;
}

.footer>view{display: flex;}
.footer3{flex: 1;}

.footer3{
  display: flex;
  justify-content: center;
  padding-top: 0rpx;
}

.footer3>image{
  width: 110rpx;
  height: 110rpx;
  margin: 0px 15rpx;
  position: relative;
}
