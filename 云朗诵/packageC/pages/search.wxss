/* pages/search/search.wxss */
page{
  height:100%;
}
.background{
  width: 100%;
  height: 100%;
  position: fixed;
  background-size:100% 100%;
  z-index: -999;/*图片叠加在底部*/
  opacity: 0.4; /*透明度*/
}

.search-box{
  display: flex;
  justify-content: center;
  padding-top: 3rpx;
  padding-bottom: 3rpx;
  border-bottom: black solid 3rpx;
}
.search{
  width: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  background-color: rgba(59, 59, 61, 0.322);
  border-radius: 25rpx;
}
.search_image{
  width: 60rpx;
  height: 60rpx;
}
.search>input{
  width:300rpx;
}

.btn{
  width: 100rpx;
  height: 60rpx;
  font-size: 40rpx;
  text-align: center;
  border-radius: 30rpx;
  margin-left: 5rpx;
  color:white;
  background-color: rgb(219, 85, 85);
}


.scrollItem{
  margin: 3rpx;
  padding:3rpx;
  border:1rpx solid rgba(156, 154, 154, 0.288);
  height:60rpx;
  display: flex;
  align-items: center;
}
.font1{
  padding: 2rpx;
}


.result-box{
  height: 90%;
}

.result{
  margin: 3rpx;
  padding:3rpx;
  border:1rpx solid rgba(156, 154, 154, 0.288);
  height:150rpx;
  display: flex;
  flex-direction: column;
}

.title{
  font-size: 40rpx;
}

.author{
  font-size: 35rpx;
}

.content{
  width: 100%;
  height: 40rpx;
  font-size: 30rpx;
  overflow: hidden;
  display: inline-block;
  white-space: nowrap;  /*不换行*/
  text-overflow: ellipsis;
}

.end{
  text-align: center
}