/* pages/list/list.wxss */
.search-box{
  display: flex;
  justify-content: center;
  padding-top: 3rpx;
  padding-bottom: 3rpx;
  border-bottom: black solid 3rpx;
}
.search{
  width: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  background-color: rgba(59, 59, 61, 0.322);
  border-radius: 25rpx;
}
.search_image{
  width: 60rpx;
  height: 60rpx;
}
.search>input{
  width:300rpx;
}

.btn{
  width: 100rpx;
  height: 60rpx;
  font-size: 40rpx;
  text-align: center;
  border-radius: 30rpx;
  margin-left: 5rpx;
  color:white;
  background-color: rgb(219, 85, 85);
}


.scrollItem{
  margin: 3rpx;
  padding:3rpx;
  border:1rpx solid rgba(156, 154, 154, 0.288);
  height:60rpx;
  display: flex;
  align-items: center;
}
.font1{
  padding: 2rpx;
}

.show{
  margin: 3rpx;
  padding:3rpx;
  border:1rpx solid rgba(156, 154, 154, 0.288);
  height:150rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.massage{
  height:150rpx;
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}
.listen{
  width:20%;
  height:80rpx;
  margin-right: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
  color:white;
  background-color: rgb(219, 85, 85);
}

.title{
  font-size: 40rpx;
}

.author{
  font-size: 35rpx;
}
.flower{
  font-size: 35rpx;
  display: flex;
  align-items: center;
}

.flower>image{
  width: 40rpx;
  height: 40rpx;
}

.end{
  text-align: center
}